{
  "compilerOptions": {
    "target": "ES6",
    "module": "ESNext", 
    "moduleResolution": "Node", 
    "strict": true, 
    "esModuleInterop": true, 
    "skipLibCheck": true, 
    "resolveJsonModule": true, 
    "allowSyntheticDefaultImports": true 
  },
  "include": ["cypress/**/*.ts"], 
  "exclude": ["node_modules"],
  "references": [
    { "path": "./tsconfig.app.json" },
    { "path": "./tsconfig.node.json" }
  ]
}
